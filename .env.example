# GitHub webhook secret (global default, can be overridden per project in projects.yml)
GITHUB_WEBHOOK_SECRET=

# Telegram notifications (optional)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Bearer token for manual trigger / admin endpoints
DEPLOY_TOKEN=

# Path to projects config file
PROJECTS_CONFIG=./projects.yml

# Flask settings
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
FLASK_DEBUG=false

# Log directory
LOG_DIR=./logs
